<div style="width: 1100px;margin: 0 auto;">
<br />
<%= image_tag("FounditLogo@2x.png", :class => "mainLogo") %>

<div style="margin: 0 auto;width: auto;padding-left: 36%;">
	<%= link_to "New Posting", new_posting_path, :class => "homeText" %>
<div style="margin-left: 90px;">
Type = 1 = Lost<br />
Type = 2 = Found
</div>
</div>
<br /><br />
</div>
<table style="width: auto;margin: 0 auto;" border="1" cellspacing='0'>
  <tr>
  	<th>ID</th>
  	<th>Type</th>
    <th>Name</th>
    <th>Description</th>
    <th>Image</th>
    <th>Image Thumbnail</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th>Created At</th>
    <th>Last Modified</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% 
@postings = Posting.where('posting_type == 1')
@postings = @postings.find(:all, :order => "created_at DESC")
@postings.each do |posting| %>
  <tr>
  	<td><%= posting.id %></td>
  	<td><%= posting.posting_type %></td>
    <td><%= posting.name %></td>
    <td><%= posting.description %></td>
    <td><%= image_tag(posting.photo.url(:large)) %></td>
    <td><%= image_tag(posting.photo.url(:thumb)) %></td>
    <td><%= posting.latitude %></td>
    <td><%= posting.longitude %></td>
    <td><%= posting.created_at %></td>
    <td><%= posting.updated_at %></td>
    <td><%= link_to 'Show', posting %></td>
    <td><%= link_to 'Edit', edit_posting_path(posting) %></td>
    <td><%= link_to 'Destroy', posting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>